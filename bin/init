require_once dirname(__DIR__).'/vendor/autoload.php';

use fkooman\Config\Reader;
use fkooman\Config\YamlFile;
use fkooman\VPN\Server\ConnectionLog;
use fkooman\VPN\Server\OtpLog;
use fkooman\VPN\Server\ZeroTier\ClientDb;

try {
    $config = new Reader(
        new YamlFile(dirname(__DIR__).'/config/zerotier.yaml')
    );
    $db = new PDO(
        $config->v('db', 'dsn', false, sprintf('sqlite://%s/data/zerotier.sqlite', dirname(__DIR__))),
        $config->v('db', 'username', false),
        $config->v('db', 'password', false)
    );

    $clientDb = new ClientDb($db);
    $clientDb->initDatabase();
} catch (Exception $e) {
    echo $e->getMessage().PHP_EOL;
    exit(1);
}
